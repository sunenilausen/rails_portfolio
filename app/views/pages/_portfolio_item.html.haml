.portfolio-item
  .card.grow.portfolio-card
    .card-image
      = image_tag(image, class: 'portfolio-image')
    .card-content.center
      .portfolio-title= title
      = content
    .card-action
      - if defined? github
        %a{href: "#{github}"} Github
      - if defined? blog
        %a{href: "#{blog}"} Blog
      - if defined? game
        %a{href: "#{game}"} Play it here
      - if defined? link
        %a{href: "#{link}"} Link to come